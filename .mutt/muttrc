message-hook "~f @sc.bme.hu" "unalternative_order *; alternative_order text/html"

# PGP
# source /usr/share/doc/mutt-ng-20060402/samples/gpg.rc
source ~/.mutt/smime.rc
source ~/.mutt/gpg.rc
